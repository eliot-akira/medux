{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": false,
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext"],
    "allowSyntheticDefaultImports": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noEmitHelpers": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  "allowJS": false,
  "include": ["src/**/*.ts"],
  "exclude": ["**/node_modules/**", "src/**/test.ts", "src/**/**.test.ts"]
}
